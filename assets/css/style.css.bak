*{
	padding: 0;
	margin: 0;
	box-sizing: border-box;
}

/* ................................Hero-section-css.......................... */

.hero{
	
	width: 100%;
	padding:45px 0 60px;
	background-image: linear-gradient(rgb(244,55,66,0.7),rgb(244,55,66,0.7)),    url(../images/Hero-img.jpg);
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center;
	background-attachment: fixed;
	overflow: hidden;
	height: 850px;
	
}
.logo{
	margin-bottom: 145px;
}

.navbar{
	margin-bottom: 100px;
}
.hero ,.navbar, .nav li{
	display: inline-block;
	margin-left: 10px;
}

.hero .nav li a{
	color: #fff;
	font-size: 16px;
	font-weight: 400;
	text-transform: uppercase;
	padding-top: 20px;
	margin-left: 10px;
	position: relative;
	
}
.hero .nav li a::after{
	content:'';
	height:3px;
	width:0%;
	background-color:#fff;
	position:absolute;
	bottom:-15px;
	left:0;
	transition : all 0.5s ease-in-out;

}
.hero .nav li a:hover::after{
	width: 100%;
}

.info h1{
	font-size: 52px;
	color: #fff;
	font-weight: bold;
	text-transform: uppercase;
	margin-bottom: 55px;
} 
.info p{
	font-size: 36px;
	color: #fff;
	font-weight: 400px;
	margin-bottom: 55px;
}
.info a{
	font-size: 18px;
	font-weight: bold;
	color: #fff;
	padding: 15px 50px 15px 35px;
	background-color: #282828;
	border-radius: 45px;
	text-transform: uppercase;
	
}


.btn{
	font-family: 'Montserrat', sans-serif;
	padding:15px 50px 15px 35px;
	background-color:#353535;
	border-radius:100px;
	font-size:15px;
	color:#fff;
	cursor:pointer;
	font-weight:bold;
	transition:all 0.4s ease-in-out;
	text-transform: uppercase;
	margin : 0 auto;
}

.btn i{
	vertical-align:middle;
	margin-right:22px;
	font-size:45px;

}
.btn:hover{
	background-color:#fff;
	color:#353535;
}

.thumb-img{
	position: relative;
	
}
.thumb-img img{
	position: absolute;
	right: -15px;
	top: -35px;
	width: 500px;
	
}

/* ...................................Features css....................................... */

.Features{
	padding: 80px 0 20px;

}

.Features h1{
	font-family: 'Montserrat', sans-serif;
    margin-bottom: 45px;
    font-size: 52px;
    font-weight: bold;
